@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.HireDate)
  @Html.TextBoxFor(model => model.HireDate , new { type = "date"})

  <input type="submit" value="Add a new engineer" />
}

<p>@Html.ActionLink("Show all Engineers", "Index")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>